<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="true">
<!--  web应用的初始化参数-->
  <context-param>
    <param-name>url</param-name>
<!--    链接url-->
    <param-value>jdbc:mysql://localhost:3306/mybatics</param-value>
  </context-param>


<!--注册-->
  <servlet>
    <servlet-name>hello</servlet-name>
    <servlet-class>com.kuang.Servelt.HttpServelt</servlet-class>
  </servlet>
<!--  请求路径-->
  <servlet-mapping>
    <servlet-name>hello</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>



  <!--注册-->
  <servlet>
    <servlet-name>getc</servlet-name>
    <servlet-class>com.kuang.Servelt.GetServlet</servlet-class>
  </servlet>
  <!--  请求路径-->
  <servlet-mapping>
    <servlet-name>getc</servlet-name>
    <url-pattern>/getc</url-pattern>
  </servlet-mapping>


  <!--注册-->
  <servlet>
    <servlet-name>gp</servlet-name>
    <servlet-class>com.kuang.Servelt.ServletDemo03</servlet-class>
  </servlet>
  <!--  请求路径-->
  <servlet-mapping>
    <servlet-name>gp</servlet-name>
    <url-pattern>/gp</url-pattern>
  </servlet-mapping>


  <!--注册-->
  <servlet>
    <servlet-name>s4</servlet-name>
    <servlet-class>com.kuang.Servelt.ServletDemo4</servlet-class>
  </servlet>
  <!--  请求路径-->
  <servlet-mapping>
    <servlet-name>s4</servlet-name>
    <url-pattern>/s4</url-pattern>
  </servlet-mapping>

  <!--注册-->
  <servlet>
    <servlet-name>s5</servlet-name>
    <servlet-class>com.kuang.Servelt.ServletDemo05</servlet-class>
  </servlet>
  <!--  请求路径-->
  <servlet-mapping>
    <servlet-name>s5</servlet-name>
    <url-pattern>/s5</url-pattern>
  </servlet-mapping>



</web-app>
